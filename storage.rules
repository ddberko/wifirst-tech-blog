rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images publiques en lecture
    match /images/{imageFile} {
      allow read: if true;
      allow write: if false; // Écriture uniquement via admin SDK
    }

    // Bloquer tout le reste par défaut
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
